CREATE TABLE Users (
    UID INT PRIMARY KEY,
    Name VARCHAR(100),
    Phone VARCHAR(15),
    Email VARCHAR(100)
);

CREATE TABLE Visitor (
    UID INT,
    DateVisited DATE,
    PRIMARY KEY (UID),
    FOREIGN KEY (UID) REFERENCES User(UID)
);

CREATE TABLE Student (
    UID INT,
    SID INT,
    Year INT,
    Dno INT,
    PRIMARY KEY (UID),
    FOREIGN KEY (UID) REFERENCES User(UID),
    FOREIGN KEY (Dno) REFERENCES Department(Dno)
);

CREATE TABLE FacultyStaff (
    UID INT,
    Dno INT,
    Rank VARCHAR(50),
    PRIMARY KEY (UID),
    FOREIGN KEY (UID) REFERENCES User(UID),
    FOREIGN KEY (Dno) REFERENCES Department(Dno)
);

CREATE TABLE Department (
    Dno INT PRIMARY KEY,
    Dname VARCHAR(100)
);

CREATE TABLE Item (
    IID INT PRIMARY KEY,
    Description VARCHAR(255),
    Status VARCHAR(50),
    Type VARCHAR(50) CHECK (Type IN ('Clothes', 'Electronics', 'School Supply', 'Misc')),
    Brand VARCHAR(50),
    Size VARCHAR(50),
    Name VARCHAR(100)
);

CREATE TABLE Report (
    RID INT PRIMARY KEY,
    Date DATE,
    Description VARCHAR(255),
    Status VARCHAR(50) CHECK (Status IN ('lost', 'found', 'returned')),
    IID INT,
    UID INT,
    FOREIGN KEY (IID) REFERENCES Item(IID),
    FOREIGN KEY (UID) REFERENCES User(UID)
);

CREATE TABLE FinalReport (
    FID INT PRIMARY KEY,
    LRID INT,
    FRID INT,
    UID INT,
    PickUpID INT,
    Date DATE,
    FOREIGN KEY (LRID) REFERENCES Report(RID),
    FOREIGN KEY (FRID) REFERENCES Report(RID),
    FOREIGN KEY (UID) REFERENCES User(UID),
    FOREIGN KEY (PickUpID) REFERENCES User(UID)
);
